{% extends "layout.twig" %}

{% block title %}Анализатор страниц{% endblock %}

{% block content %}
<div class="container-lg mt-3">
    <h1>Анализатор страниц</h1>

    <div class="row">
        <div class="col-12 col-md-10 col-lg-8">
            <p class="lead">Бесплатно проверяйте сайты на SEO пригодность</p>

            <form action="/urls" method="post" class="row g-3">
                <div class="col-12">
                    <input type="text" name="url[name]" value="" class="form-control form-control-lg" 
                           id="url-input" placeholder="https://www.example.com" required>
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary btn-lg px-5">Проверить</button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}

