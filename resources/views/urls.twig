{% extends "layout.twig" %}

{% block title %}Сайты{% endblock %}

{% block content %}
<h1>Сайты</h1>

<div class="table-responsive">
    <table class="table table-bordered table-hover text-nowrap" data-test="urls">
        <thead>
            <tr>
                <th>ID</th>
                <th>Имя</th>
                <th>Последняя проверка</th>
                <th>Код ответа</th>
            </tr>
        </thead>
        <tbody>
        {% for url in urls %}
            <tr>
                <td>{{ url.id }}</td>
                <td>
                    <a href="{{ url_for(routes.urls_show, {'id': url.id}) }}">
                        {{ url.name }}
                    </a>
                </td>
                <td>{{ url.last_check_at|default('') }}</td>
                <td>{{ url.response_code|default('') }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" class="text-center">Список пуст</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}

